---
interface Props {
  width?: string;
  height?: string;
}

const { width, height } = Astro.props;
---

<div class="skeleton_box"></div>

<style define:vars={{ width, height }}>
  .skeleton_box {
    display: inline-block;
    width: var(--width, 1rem);
    height: var(--height, 1rem);
    position: relative;
    overflow: hidden;
    background-color: rgb(var(--card-rgb), 0.3);

    border-radius: 5px;

    &::after {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      transform: translateX(-100%);
      background-image: linear-gradient(
        90deg,
        rgba(#fff, 0) 0,
        rgba(#fff, 0.2) 20%,
        rgba(#fff, 0.5) 60%,
        rgba(#fff, 0)
      );
      animation: shimmer 5s infinite;
      content: "";
    }

    @keyframes shimmer {
      100% {
        transform: translateX(100%);
      }
    }
  }
</style>
