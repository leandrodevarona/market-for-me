---
import { Routes } from "../../../lib/utils/routes";
import SkeletonBox from "../../loaders/SkeletonBox.astro";
import SidebarMarkets from "../sidebar/SidebarMarkets.astro";
---

<div class="sidebar">
  <header class="sidebar_header">
    <a href={Routes.adminHome}>
      <h1>Dashboard</h1>
    </a>
  </header>
  <nav class="sidebar_nav">
    <SidebarMarkets server:defer>
      <SkeletonBox slot="fallback" width="150px" />
    </SidebarMarkets>
  </nav>
</div>

<style>
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    background-color: rgb(var(--callout-rgb));
  }

  .sidebar_header {
    width: 100%;
    background-color: rgb(var(--tile-start-rgb));

    padding: 1rem;
  }

  .sidebar_nav {
    padding: 1rem;
  }
</style>
