---
import { Routes } from "@utils/routes";
import GoogleSignin from "./auth/buttons/GoogleSignin.astro";
import SkeletonBox from "./common/loaders/SkeletonBox.astro";
import Cart from "./markets/cart/Cart.astro";
import { Icon } from "astro-icon/components";
---

<header class="header">
  <section>
    <a href={Routes.home}>
      <Icon name="mdi:shopping-outline" size={50} />
    </a>
  </section>
  <section class="header_rigth">
    <GoogleSignin server:defer>
      <SkeletonBox slot="fallback" width="180px" />
    </GoogleSignin>
    <Cart server:defer>
      <SkeletonBox slot="fallback" width="50px" height="30px" />
    </Cart>
  </section>
</header>

<style>
  .header {
    width: 100%;

    display: flex;
    align-items: center;
    justify-content: space-between;

    padding: 1rem;

    border-bottom: 1px solid rgba(var(--callout-border-rgb), 0.3);
  }

  .header_rigth {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Mobile */
  @media (max-width: 700px) {
    .header_rigth {
      gap: 0.3rem;
    }
  }
</style>
