---
import { Image } from "astro:assets";

interface Props {
  class?: string;
  url?: string | null;
}

const { class: className, url } = Astro.props;
---

<div class:list={["market_image", className]}>
  {
    url ? (
      <Image src={url} alt="Market image" width={1600} height={400} />
    ) : (
      <p>No hay imagen</p>
    )
  }
</div>

<style>
  .market_image {
    width: 100%;

    aspect-ratio: 16 / 6;

    display: flex;
    align-items: center;
    justify-content: center;

    background-color: rgba(var(--callout-rgb), 0.5);
    border: 1px solid rgba(var(--callout-border-rgb), 0.3);
    border-radius: var(--border-radius);

    overflow: hidden;
  }

  .market_image img {
    width: 100%;
    height: 100%;

    object-fit: cover;
  }
</style>
