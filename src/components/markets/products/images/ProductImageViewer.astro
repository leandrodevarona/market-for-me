---
import { Image } from "astro:assets";
import ProductImageItem from "./ProductImageItem.astro";

interface Props {
  imageUrls: string[];
}

const { imageUrls } = Astro.props;

if (!imageUrls || imageUrls.length <= 0) return;
---

<div class="product_image__viewer">
  <ul>
    {
      imageUrls.map((image) => (
        <ProductImageItem id={image} imageId="product_image" imageUrl={image} />
      ))
    }
  </ul>
  <section class="product_image">
    <Image
      id="product_image"
      src={imageUrls[0]}
      alt="Product image"
      width={520}
      height={520}
    />
  </section>
</div>

<style>
  .product_image__viewer {
    max-width: 600px;

    display: grid;
    grid-template-columns: 0.2fr 0.8fr;
    gap: 1rem;
  }

  .product_image__viewer ul {
    max-width: 80px;

    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  /* Mobile */
  @media (max-width: 700px) {
    .product_image {
      width: 100%;
    }

    .product_image img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }
</style>
