---
import { type Product } from "@prisma/client";
import ProductCard from "./ProductCard.astro";

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---

{(!products || products.length <= 0) && <div>No products</div>}

<ul>
  {products.map((product) => <ProductCard product={product} />)}
</ul>
