---
import type { SubtotalByCurrency } from "@customTypes/cart";
import { Currency } from "@prisma/client";

interface Props {
  itemsCount: number;
  subtotalByCurrency: SubtotalByCurrency;
}

const { itemsCount, subtotalByCurrency } = Astro.props;
---

<div class="cart_resume">
  <span>
    Subtotal ({itemsCount}
    {itemsCount > 1 ? "productos" : "producto"})
  </span>
  <div class="cart_resume__subtotal">
    {
      Object.values(Currency).map((currency) => (
        <span>{subtotalByCurrency[currency]}</span>
      ))
    }
  </div>
</div>

<style>
  .cart_resume {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .cart_resume__subtotal {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    font-size: large;
    font-weight: 600;
  }
</style>
