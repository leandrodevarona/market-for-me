---
import { Image } from "astro:assets";

interface Props {
  image?: string | null;
}

const { image } = Astro.props;
---

<div class="user_avatar">
  {
    image ? (
      <Image src={image} alt="User avatar image" width={40} height={40} />
    ) : (
      <div />
    )
  }
</div>

<style>
  .user_avatar {
    width: 40px;
    height: 40px;

    border-radius: 50%;

    overflow: hidden;
  }

  .user_avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
