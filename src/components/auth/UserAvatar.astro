---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Props {
  image?: string | null;
}

const { image } = Astro.props;
---

<div class="user_avatar">
  {
    image ? (
      <Image src={image} alt="User avatar" width={40} height={40} />
    ) : (
      <Icon name="mdi:account" size={40} />
    )
  }
</div>

<style>
  .user_avatar {
    width: 40px;
    min-width: 40px;
    height: 40px;
    min-height: 40px;

    aspect-ratio: 1;

    display: flex;
    align-items: center;
    justify-content: center;

    border-radius: 50%;

    overflow: hidden;
  }

  .user_avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
