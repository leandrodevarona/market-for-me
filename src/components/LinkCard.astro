---
interface Props {
  class?: string;
  href: string;
  role?: astroHTML.JSX.AriaRole | null | undefined;
}

const { class: className, href, role = "link" } = Astro.props;
---

<a class:list={["link_card", className]} href={href} role={role}>
  <slot />
</a>

<style>
  .link_card {
    width: 100%;

    display: flex;
    background-color: rgb(var(--card-rgb));
    background-image: none;
    background-size: 400%;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);

    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    opacity: 0.8;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .link_card:is(:hover, :focus-within) {
    background-color: rgba(var(--card-rgb), 0.8);
  }
</style>
